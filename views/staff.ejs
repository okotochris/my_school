<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/global.css">
  <title>Staff Management</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="admin-container">
    <%- include('./partials/navigation.ejs') %>
    <main class="section">
      <div class="container center-container">
        <div class="form-container">
          <div class="form-header">
            <h2>Create New Staff Account</h2>
          </div>
          <form id="staffForm">
            <div class="form-controls">
              <div class="form-group">
                <label for="username">Name</label>
                <input
                  type="text"
                  id="username"
                  name="user_name"
                  placeholder="Enter Name"
                  required
                  autocomplete="off"
                  aria-label="Staff Name"
                />
                <span class="error-message"></span>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Enter Email"
                  required
                  autocomplete="off"
                  aria-label="Staff Email"
                />
                <span class="error-message"></span>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Enter Password"
                  required
                  autocomplete="off"
                  aria-label="Staff Password"
                />
                <span class="error-message"></span>
              </div>
              <button type="submit" class="button">Add Staff</button>
            </div>
          </form>
          <div class="alert-dialog" style="display: none;">
            <span class="cancel-btn" onclick="closeAlert()">√ó</span>
            <div id="alertMessage"></div>
          </div>
          <div class="table-wrapper">
            <div class="table-header">
              <h3>Staff List</h3>
              <span class="total-count">Total Staff: <%= staff.length %></span>
            </div>
            <% if (staff && staff.length > 0) { %>
              <table id="staffTable">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% staff.forEach((item, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= item.user_name %></td>
                      <td><%= item.email.length > 15 ? item.email.substring(0, 15) + '...' : item.email %></td>
                      <td>
                        <span class="action delete-btn" data-id="<%= item._id %>" aria-label="Delete <%= item.user_name %>">
                          <span class="icon-trash">üóëÔ∏è</span>
                        </span>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } else { %>
              <div class="table-empty">No staff available</div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/menu.js"></script>
  <script src="/js/staff.js"></script>
</body>
</html>