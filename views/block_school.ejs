    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --gray: #6b7280;
            --light: #f8fafc;
            --border: #e2e8f0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #f0f7ff 0%, #e0ecff 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
            padding: 3rem 2.5rem;
            max-width: 520px;
            text-align: center;
            border: 1px solid var(--border);
        }

        .icon {
            font-size: 4.5rem;
            color: #cbd5e1;
            margin-bottom: 1.5rem;
        }

        h1 {
            font-size: 2rem;
            color: #1e293b;
            margin-bottom: 1rem;
        }

        p {
            color: var(--gray);
            line-height: 1.6;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .highlight {
            background: #eff6ff;
            border: 1px solid #bfdbfe;
            border-radius: 12px;
            padding: 1.8rem;
            margin: 2rem 0;
            color: #1e40af;
        }

        .highlight h3 {
            margin-bottom: 0.8rem;
            color: var(--primary-dark);
            font-size: 1.3rem;
        }

        .features {
            display: grid;
            grid-template-columns: auto / repeat(2, 1fr);
            gap: 1rem;
            margin-top: 1.2rem;
            font-size: 0.95rem;
            color: #475569;
        }

        .btn {
            display: inline-block;
            background: var(--primary);
            color: white;
            padding: 0.9rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 1rem;
            transition: background 0.3s;
        }

        .btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
        }

       
        @media (max-width: 600px) {
            .card {
                margin: 1rem;
                padding: 2rem 1.5rem;
            }

            .features {
                grid-template-columns: 1fr;
            }

           
        }
    </style>
</head>
<body>

