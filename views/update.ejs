  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/global.css" />
  <title>Update Student Record</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="admin-container">
    <%- include('./partials/navigation.ejs') %>
    <main class="section">
      <div class="container center-container">
        <div class="form-container">
          <div class="form-header">
            <h2>Update Student Record</h2>
          </div>
          <form action="/update-student" method="post" enctype="multipart/form-data" id="updateStudentForm" novalidate>
            <div class="form-group">
              <label for="studentId">Student ID</label>
              <input
                type="text"
                id="studentId"
                name="studentId"
                placeholder="Enter Student ID (e.g., STU001)"
                required
                autocomplete="off"
              />
              <span class="error-message"></span>
            </div>

            <div class="form-group">
              <button type="button" id="studentDetails" class="button">Fetch Student Info</button>
            </div>

            <div class="form-group">
              <label for="newName">New Name</label>
              <input
                type="text"
                id="newName"
                name="newName"
                placeholder="Enter updated full name"
                autocomplete="off"
              />
              <span class="error-message"></span>
            </div>

            <div class="form-group">
              <label for="addmissionNo">Admission Number</label>
              <input
                type="text"
                id="addmissionNo"
                name="addmissionNo"
                placeholder="Admission Number"
                autocomplete="off"
              />
              <span class="error-message"></span>
            </div>

            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input type="date" id="dob" name="dob" />
              <span class="error-message"></span>
            </div>

            <div class="form-group">
              <label for="classN">Class</label>
              <select name="class" id="classN" required>
                <option value="">Select Class</option>
                <option value="SS 3">SS 3</option>
                <option value="SS 2">SS 2</option>
                <option value="SS 1">SS 1</option>
                <option value="JSS 3">JSS 3</option>
                <option value="JSS 2">JSS 2</option>
                <option value="JSS 1">JSS 1</option>
                <option value="BASIC 6">BASIC 6</option>
                <option value="BASIC 5">BASIC 5</option>
                <option value="BASIC 4">BASIC 4</option>
                <option value="BASIC 3">BASIC 3</option>
                <option value="BASIC 2">BASIC 2</option>
                <option value="BASIC 1">BASIC 1</option>
                <option value="NURSERY 3">NURSERY 3</option>
                <option value="NURSERY 2">NURSERY 2</option>
                <option value="NURSERY 1">NURSERY 1</option>
                <option value="PRE-NURSERY">PRE-NURSERY</option>
              </select>
              <span class="error-message"></span>
            </div>

            <fieldset class="form-group gender">
              <legend>Gender</legend>
              <label><input type="radio" value="MALE" name="gender" id="male" required /> Male</label>
              <label><input type="radio" value="FEMALE" name="gender" id="female" /> Female</label>
              <span class="error-message"></span>
            </fieldset>

            <div class="form-group">
              <label for="passport">Passport Photo</label>
              <input type="file" id="passport" name="passport" accept="image/*" />
              <span class="error-message"></span>
            </div>

            <button type="submit" class="button">Update Record</button>
          </form>
        </div>
      </div>
    </main>
  </div>
    <div class="cover">
        <dev id="loading"></dev>
    </div>
  <script src="/js/menu.js"></script>
  <script src="js/updateStudentRecord.js"></script>
 
</body>
</html>