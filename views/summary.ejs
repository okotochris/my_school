<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My school result</title>
    <style>
        *{
            padding:0px;
            margin: 0px;
            box-sizing: border-box;
        }
        body{
            display: flex;
            flex-direction: column;
           align-items: center;
           font-size: 20px;
        }
        .header{
            font-size: 30px;
            color:blue;
            text-align: center;
            margin:20px 0px;
        }
        .section{
            margin: 10px 0px;
            font-size: 20px;
           display: flex;
           flex-direction: column;
           align-items: center;
        }
        .section span{
            height: 100px;
            width:100px;
            border-radius: 50%;
            background: blue;
            color:white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 25px;
        }
        table{
            border-collapse: collapse;
            font-size: 20px;
           margin:10px;
            
        }
        tr td, tr th{
            border: solid 1px black;
            padding:10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>KHRISTAL TECH</h2>
        <p>My School Result</p>
    </div>
    <div class="section">
        <p>Numbers of school Registerd</p>
        <span>
            4
        </span>
    </div>
    <div>
       <% if( school.length !='' ){ %>
        <% let total = 0 %>
        <table>
            <tr>
                <th>S/N</th>
                <th>School Name</th>
                <th>Adress</th>
                <th>Phone Number</th>
                <th>₦ Fees </th>
            </tr>
          <% school.forEach((items, index)=>{ %>
            <% total += items.fees %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= items.schoolName %></td>
                <td>Sakponba Road, off dawnson New benin benin city</td>
                <td>No number resgisted</td>
                <td><%= items.fees %></td>
            </tr>
          <% }) %>
        </table>
        <p> Total Fees ₦<%= total %></p>
      <% }else{ %>
        <h2>NO SCHOOL HAS REGISTERD</h2>
      <%} %>
    </div>
    <div>
        <h2>Good Luck !</h2>
    </div>
</body>
</html>