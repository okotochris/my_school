    <%-include("partials/footer") %>
    <script>
        const form = document.getElementById('login-form');
        const button =document.getElementById('submit-button')
       
        form.addEventListener('submit', async (e) => {
        e.preventDefault(); // âœ… prevent default form submission

        const user_name = document.getElementById("user_name").value
        const email = document.getElementById('email').value;
        const school = document.getElementById('school').value
        const role = document.getElementById('role').value;
        const password = document.getElementById('password').value
        button.innerText = "loading..."
        button.disabled = true;
        try {
            const res = await fetch('/admin_form', {
                method: "POST",
                headers: {
                    'Content-Type': "application/json"
                },
                body: JSON.stringify({user_name, email, school, role, password })
            });
            const data = await res.json();
            if(res.ok){
            return window.location.href = `${data}`;
            }
            button.style.backgroundColor = 'red'
            button.innerText = data.msg
        } catch (error) {
            button.style.backgroundColor = 'red'
            button.innerText = 'server error'
            console.error(error);
        }finally{
             button.disabled = false;
        }
        });
        function reset(){
            button.style.backgroundColor = ' #0ea5e9'
            button.disabled = false;
            button.innerText = "Login"
        }
        document.getElementById('email').oninput=()=>{
            reset()
        }
        document.getElementById('password').oninput=()=>{
            reset()
        }
    </script>
