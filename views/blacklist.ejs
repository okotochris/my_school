<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs') %>
    <body>
        <div class="menu">
            <div></div>
            <div></div>
            <div></div>
                
        </div>
        <div class="admin-container">
            <%- include('./partials/navigation.ejs') %>
            <div class="section">
                <div class="welcome">ADD STUDENT TO BLACKLIST</div>
                <div  class="add_form">
                        <form>
                           <input type="text" placeholder="Student Name" id="studentID"/>
                            <button id="getStudent">ADD TO BLACKLIST</button>
                        
                        </form>
                    </div>
                    <div class="studentList">
                        <h3>NAMES IN BLACKLIST CAN'T ACCESS THEIR RESULT</h3>
                            <% if(data.length > 0){ %>
                                <table id="table">
                                    <tr>
                                        <th  width="50px">SN</th>
                                        <th  width="400px">NAME</th>
                                        <th>STUDENT ID</th>
                                        <th>REMOVE ALL</th>
                                    </tr>
                              <% for(let i=0; i< data.length; i++){ %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= data[i].studentName %> </td>
                                    <td><%= data[i].studentId %> </td>
                                    <td><button class="remove-btn" data-id="<%= data[i].studentId %>">Remove</button></td>
                                </tr>
                                
                              <% } %>

                            <%}else{ %>
                               <P>NO STUDENT IN BLACKLIST</P>
                            <% } %>
                            
                            
                        </table>
                    </div>
                    <div class="blacklist">
                        <div class='cancel2' onclick="cancel1()">X</div>
                        
                        <div id='studentName'> </div>
                    </div>
                    <div class="loading"></div>
            </div>
            
        </div>
 
   <script src="Java Script/menu.js"></script>
   <script src="Java Script/blacklist.js"></script>
   <script src="Java Script/remove.js"></script>

</body>



</html>
