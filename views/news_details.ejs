<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZRDY8JQBQ7"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-ZRDY8JQBQ7');
  </script>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Dynamic Title & Meta (server-side rendered) -->
  <title><%= article.title %> | MySchoolResult</title>
<meta property="og:image" content="<%= article.image %>">
<meta name="description" content="<%= article.summary || article.body.substring(0, 160) %>">
<meta name="keywords" content="education, student analytics, personalized learning, academic performance, edtech">
<meta name="author" content="<%= article.author || 'MySchoolResult' %>">
<meta property="og:title" content="<%= article.title || 'MySchoolResult - Education News' %>">
<meta property="og:description" content="<%= article.displayContent.replace(/(<([^>]+)>)/gi, '').substring(0, 300) %>">
<meta property="og:url" content="https://myschoolresult.com/news_details/<%= article._id %>">
<meta property="og:type" content="article">
<meta property="og:site_name" content="MySchoolResult">


  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= article.title %>">
  <meta name="twitter:description" content="<%= article.body.substring(0, 200) %>">
  <meta name="twitter:image" content="<%= article.image || 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80' %>">

<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2077324357254940"
     crossorigin="anonymous"></script>
<!-- STYLE LINK-->
  <link rel="canonical" href="https://myschoolresult.com/news/<%= article.slug || article.id %>">
  <link rel="stylesheet" href="/styles/index.css">
  <link rel="stylesheet" href="/styles/newsDetails.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <link rel="icon" href="/myschoolresult.png" type="image/png" sizes="32x32">

  <!---FACEBOOK TAG -->

</head>
<body>
  <%- include('partials/header2') %>

  <div style="height:100px"></div>

  <main style="max-width:900px;margin:2rem auto;">
    <!-- Article Section -->
    <article class="article-hero">
      <span class="article-badge"><%= article.category || 'News' %></span>
      <h1><%= article.title %></h1>
      <div class="article-meta">
        <span><%= article.pubDate ? new Date(article.pubDate).toLocaleDateString() : '' %></span> |
        <span><%= article.author || 'MySchoolResult' %></span> |
        <span><%= article.read_time || '' %></span>
      </div>
      <img src="<%= article.image || 'https://via.placeholder.com/1200x600' %>" alt="<%= article.title %>" class="article-image"/>
      
      <div class="article-content">
        <% 
          // Split content into paragraphs (similar to the JS logic)
          let content = article.body || article.content || '';
          let paragraphs = content.split(/\n\n+/).filter(p => p.trim().length > 0);
          if (paragraphs.length <= 1) {
            paragraphs = content.split(/\n+/).filter(p => p.trim().length > 20);
          }
          paragraphs.forEach(para => { 
            let safePara = para.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;').trim();
        %>
          <p><%= safePara %></p>
        <% }) %>
      </div>
    </article>

    <!-- Optional Ad Placement -->
    <div class="monetag-native-ad" style="margin:2rem 0;">
      <!-- Monetag or other ad code can be placed here if needed -->
    </div>

    <!-- Share Buttons -->
    <div class="share-section" style="margin-top:2rem; display:flex; align-items:center; gap:1rem;">
      <span>Share this article:</span>
      <div style="display:flex; gap:1rem;">
        <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent('https://myschoolresult.com/news_details/' + article._id) %>" 
           target="_blank" rel="noopener" class="share-btn twitter" title="Share on Twitter">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent('https://myschoolresult.com/news_details/' + article._id) %>" 
        target="_blank" rel="noopener" class="share-btn facebook" title="Share on Facebook">
        <i class="fab fa-facebook-f"></i>
      </a>

        <a href="https://wa.me/?text=<%= encodeURIComponent('https://myschoolresult.com/news_details/' + article._id) %>" 
           target="_blank" rel="noopener" class="share-btn whatsapp" title="Share on WhatsApp">
          <i class="fab fa-whatsapp"></i>
        </a>
        <a href="#" class="share-btn" title="Copy link" onclick="navigator.clipboard.writeText('https://myschoolresult.com/news/<%= article._id%>'); alert('Link copied!'); return false;">
          <i class="fas fa-link"></i>
        </a>
      </div>
    </div>

    <!-- Related Articles -->
    <section id="related-articles" style="margin-top:3rem;">
      <h2>Related Articles</h2>
      <div class="related-grid">
        <% relatedArticles.forEach((rel) => { %>
          <div class="related-card">
            <div class="related-image" style="background-image:url('<%= rel.image %>')"></div>
            <div class="related-content">
              <span class="related-badge"><%= rel.category || 'News' %></span>
              <h3 class="related-card-title"><a href="/news_details/<%=rel._id %>"><%= rel.title %></a></h3>
              <p class="related-meta"><%= rel.pubDate ? new Date(rel.pubDate).toLocaleDateString() : '' %></p>
            </div>
          </div>
        <% }) %>
        <% if (relatedArticles.length === 0) { %>
          <p style="text-align:center; grid-column: 1 / -1;">No related articles available.</p>
        <% } %>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>

  <script src="/js/navigation.js"></script>
  <script src="/js/menu2.js"></script>
</body>
</html>