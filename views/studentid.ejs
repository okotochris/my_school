  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/global.css">
  <title>Get Student ID</title>
</head>
<body>
  <%- include('./partials/header.ejs') %>
  <div class="admin-container">
    <%- include('./partials/navigation.ejs') %>
    <main class="section">
      <div class="container center-container">
        <div class="form-container">
          <div class="form-header">
            <h2>Get Student ID</h2>
          </div>
          <form id="studentIdForm">
            <div class="form-controls">
              <div class="form-group">
                <label for="student_name">Name</label>
                <input
                  type="text"
                  id="student_name"
                  name="student_name"
                  placeholder="Last, First, Middle Name"
                  required
                  autocomplete="off"
                  aria-label="Student Name"
                />
                <span class="error-message"></span>
              </div>
              <button type="button" id="getId" class="button">Get ID</button>
            </div>
            <div class="form-controls">
              <div class="form-group">
                <label for="class">Class</label>
                <select id="class" name="class" aria-label="Select Class">
                  <option value="">Select Class</option>
                  <option value="SS">SS</option>
                  <option value="SS 3">SS 3</option>
                  <option value="SS 2">SS 2</option>
                  <option value="SS 1">SS 1</option>
                  <option value="JSS">JSS</option>
                  <option value="JSS 3">JSS 3</option>
                  <option value="JSS 2">JSS 2</option>
                  <option value="JSS 1">JSS 1</option>
                  <option value="BASIC 6">BASIC 6</option>
                  <option value="BASIC 5">BASIC 5</option>
                  <option value="BASIC 4">BASIC 4</option>
                  <option value="BASIC 3">BASIC 3</option>
                  <option value="BASIC 2">BASIC 2</option>
                  <option value="BASIC 1">BASIC 1</option>
                  <option value="NURSERY 3">NURSERY 3</option>
                  <option value="NURSERY 2">NURSERY 2</option>
                  <option value="NURSERY 1">NURSERY 1</option>
                  <option value="PRE-NURSERY">PRE-NURSERY</option>
                </select>
                <span class="error-message"></span>
              </div>
              <button type="button" id="classId" class="button">Get ID</button>
            </div>
          </form>
          <div class="table-wrapper">
            <table id="table" style="display: none;">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Class</th>
                  <th>Student ID</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
            <div class="table-empty" style="display: none;">No data available</div>
          </div>
          <p class="total-count">Total: <span id="total"></span></p>
          <div class="loading">Loading...</div>
        </div>
      </div>
    </main>
  </div>

  <script src="/js/menu.js"></script>
  <script src="/js/student-id-school.js"></script>
</body>
</html>